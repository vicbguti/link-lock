{
  "manifest_version": 3,
  "name": "LinkLock",
  "version": "0.1.0",
  "description": "The inbox for links. Save any link with a screenshot in one click.",
  "permissions": ["activeTab", "scripting", "storage", "tabs"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"]
    }
  ],
  "action": {
    "default_popup": "src/popup.html",
    "default_title": "LinkLock - Save this link"
  },
  "background": {
    "service_worker": "src/background.js"
  }
}
